{

  "manifest_version": 2,
  "name": "Ruten-Blacklist",
  "version": "0.0.1",

  "description": "Add BlackList to your ruten",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": 
      ["*://www.ruten.com.tw/*", 
       "*://search.ruten.com.tw/*",
       "*://class.ruten.com.tw/*",
       "*://*.ruten.com.tw/*"
      ],
      "js": ["content.js"]
    }
  ],

  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "icons": {
    "48": "icons/border-48.png"
  }

}